<style>
  .brands-slider {
    width: 1920px;
    overflow: hidden;
    position: relative;
    background: transparent;
    padding: 2rem 0;
  }

  .brands-track {
    display: flex;
    animation: scroll 30s linear infinite;
    width: max-content;
  }

  .brand-item {
    flex: 0 0 auto;
    margin-right: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .brand-logo {
    width: 240px;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: 2px solid rgba(217, 217, 217, 0.3);
    border-radius: 16px;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .brand-logo:hover {
    background: rgba(217, 217, 217, 0.1);
    border: 2px solid rgba(217, 217, 217, 0.6);
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(217, 217, 217, 0.3);
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Pausar animación al hacer hover */
  .brands-slider:hover .brands-track {
    animation-play-state: paused;
  }

  /* Botón decorativo "Confían en Nosotros" */
  .confian-button {
    @apply text-white px-10 py-5 rounded-2xl font-bold text-2xl transition-all duration-300;
    background: linear-gradient(to bottom, transparent, rgba(255, 0, 55, 0.3));
    border: 1px solid rgba(255, 0, 55, 0.4);
    box-shadow: 0 0 20px rgba(255, 0, 55, 0.2), 0 0 40px rgba(255, 0, 55, 0.1);
    backdrop-filter: blur(10px);
    cursor: default;
  }

  .confian-button:hover {
    background: linear-gradient(to bottom, transparent, rgba(255, 0, 55, 0.5));
    border: 1px solid rgba(255, 0, 55, 0.6);
    box-shadow: 0 0 30px rgba(255, 0, 55, 0.4), 0 0 60px rgba(255, 0, 55, 0.2);
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .brand-logo {
      width: 180px;
      height: 80px;
    }
    
    .brand-item {
      margin-right: 1.5rem;
    }
    
    .confian-button {
      @apply text-xl px-8 py-4;
    }
  }
</style>